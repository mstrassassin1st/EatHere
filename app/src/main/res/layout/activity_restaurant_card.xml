<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_layout_restaurant_card"
    app:cardCornerRadius="4dp"
    android:layout_gravity="center"
    android:elevation="8dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/tv_restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Name"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_restaurant_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Description"
            android:textColor="@color/colorBlack"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_open_close_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opens at (09.00-21.00)"
            android:textColor="@color/colorBlack"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_eat_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="EAT HERE"
            android:textColor="@color/colorRed" />
    </LinearLayout>

</android.support.v7.widget.CardView>